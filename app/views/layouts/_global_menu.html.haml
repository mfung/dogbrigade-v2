.navbar.navbar-inverse
  .navbar-inner
    = link_to image_tag('dog-paw.png' , class: 'brand', width: 25), root_path
    %ul.nav
      %li{class: "#{'active' if current_uri == '/'}"}
        = link_to '<i class="icon-home icon-white"></i>Home'.html_safe, root_path
      %li{class: "#{'active' if current_uri == '/search'}"}
        = link_to '<i class="icon-search icon-white"></i>Search'.html_safe, search_index_path
      %li
        = link_to '<i class="icon-info-sign icon-white"></i>Information'.html_safe, '#'
      %li
        = link_to '<i class="icon-leaf icon-white"></i>Help'.html_safe, '#'
      %li{class: "#{'active' if current_uri == '/about_us'}"}
        = link_to '<i class="icon-question-sign icon-white"></i>About Us'.html_safe, about_us_path
    %ul.nav.pull-right
      %li.divider-vertical
      - if current_user
        %li
          = link_to '<i class="icon-heart icon-white"></i> Preferences'.html_safe, '#'
        %li.dropdown
          = link_to '<i class="icon-user icon-white"></i>My Account <b class="caret"></b>'.html_safe, login_path, class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
          %ul.dropdown-menu
            %li= link_to 'Edit Account', '#'
            %li= link_to '<i class="icon-off icon-white"></i>Logout'.html_safe, logout_path
      - else
        %li
          = link_to '<i class="icon-star icon-white"></i>Sign Up!'.html_safe, new_user_path
        %li.divider-vertical
        %li
          = link_to '<i class="icon-user icon-white"></i>Sign In'.html_safe, login_path