%tr
  %td= image_tag dog_item.pictures[0].try(:tiny), class: 'img-polaroid'
  %td= dog_item.name
  %td= dog_item.breeds.join(', ')
  %td= dog_item.mix.humanize
  %td= STATUS[dog_item.status]
  - shelter = pet_gateway.shelter(dog_item.shelter_id)
  %td
    = "#{shelter.city}, #{shelter.state}<br />#{shelter.zip}".html_safe
  %td
    - if current_user
      = link_to 'Follow', '#', class: 'btn btn-primary'
    - else
      = link_to "Sign up", new_user_path, class: 'btn btn-success'
      %br
      to follow