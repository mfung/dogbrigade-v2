= simple_form_for :search, url: results_search_index_path, html: {class: 'form form-horizontal', id: 'search'} do |f|
  = f.input :breed, label: 'Breed', collection: list_dog_breeds, include_blank: false
  = f.input :age, label: 'Age', collection: ['Baby', 'Young', 'Adult', 'Senior'], include_blank: false
  = f.input :sex, label: 'Sex', collection: [['Male', 'M'],['Female','F']], include_blank: false
  = f.input :size, label: 'Size', collection: [['Small', 'S'], ['Medium', 'M'], ['Large', 'L'], ['Extra Large', 'XL']], include_blank: false
  = f.input :location, label: 'Location (Zip Code)', input_html: {value: "#{current_user.zip_code if current_user}"}
  .form-actions
    = f.submit 'Search', class: 'btn btn-primary'