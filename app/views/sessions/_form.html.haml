= form_for 'login', url: sessions_path, html: {class: 'form-inline', id: 'login-form'} do |f|
  %fieldset
    %legend Login
    = f.text_field :email, class: 'text_field span3', placeholder: 'Email'
    = f.password_field :password, class: 'password_field span3', placeholder: 'Password'
    = f.submit 'Login', class: 'btn btn-primary'